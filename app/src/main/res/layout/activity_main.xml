<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn9"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="218dp"
        android:layout_marginStart="17dp"
        android:text="9"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn9"
        android:layout_marginStart="99dp"
        android:text="8"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="99dp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn9"
        android:layout_marginEnd="130dp"
        android:text="7"
        android:layout_alignParentRight="true"
        android:layout_marginRight="130dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn9"
        android:layout_marginBottom="159dp"
        android:text="6"
        android:layout_alignLeft="@+id/btn9" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn8"
        android:layout_alignStart="@+id/btn8"
        android:layout_alignTop="@+id/btn6"
        android:text="5" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignTop="@+id/btn6"
        android:text="4" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn9"
        android:layout_marginBottom="101dp"
        android:text="3"
        android:layout_alignLeft="@+id/btn9" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn8"
        android:layout_alignStart="@+id/btn8"
        android:layout_alignTop="@+id/btn3"
        android:text="2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignTop="@+id/btn3"
        android:text="1" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn8"
        android:layout_marginBottom="45dp"
        android:text="0"
        android:layout_alignLeft="@+id/btn8" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn9"
        android:layout_alignStart="@+id/btn9"
        android:layout_alignTop="@+id/btn0"
        android:text="Clear" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn9"
        android:layout_marginEnd="9dp"
        android:text="+"
        android:layout_alignParentRight="true"
        android:layout_marginRight="9dp" />

    <Button
        android:id="@+id/btnBagi"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPlus"
        android:layout_alignStart="@+id/btnPlus"
        android:layout_alignTop="@+id/btn6"
        android:text="/" />

    <Button
        android:id="@+id/btnSama"
        android:layout_width="51dp"
        android:layout_height="107dp"
        android:layout_alignEnd="@+id/btnPlus"
        android:layout_alignRight="@+id/btnPlus"
        android:layout_alignTop="@+id/btn3"
        android:text="=" />

    <Button
        android:id="@+id/btnKoma"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignTop="@+id/btn0"
        android:text="." />

    <Button
        android:id="@+id/btnkali"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnPlus"
        android:layout_alignRight="@+id/btnPlus"
        android:layout_alignTop="@+id/btn6"
        android:text="*" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPlus"
        android:layout_alignStart="@+id/btnPlus"
        android:layout_alignTop="@+id/btn3"
        android:text="-" />

    <TextView
        android:id="@+id/tvControl"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="193dp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp" />

</RelativeLayout>